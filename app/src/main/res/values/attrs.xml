    <declare-styleable name="AgreementTextView">
        <attr name="agreementSize" format="dimension"/>
        <attr name="agreementColor" format="color|reference"/>
        <attr name="checkboxSize" format="float"/>
        <attr name="checkboxBackground" format="reference"/>
        <attr name="agreementContent" format="string"/>
        <attr name="agreeConfirmTextSize" format="dimension"/>
        <attr name="agreeConfirmTextColor" format="color"/>
        <attr name="agreeConfirmBackground" format="reference"/>
        <attr name="agreeConfirmBtnHeight" format="integer"/>
